@model IEnumerable<EmployeeCrud.Models.Employee>

@{
    ViewData["Title"] = "Index";
   
}






<h1>Employee Register</h1>

<hr />
<form method="get" asp-action="Index">
    <div class="form-action no-color">
        <p>
            Find by name:<input type="search" placeholder="Enter your Name Or Address ..." value="@ViewData["CurrentFilter"]" name="SearchString" style="width:500px; border-color:cornflowerblue" />
            <input type="submit" value="search" class="btn btn-success" />
            <a asp-action="Index">Gel All Employees</a>
        </p>

    </div>



</form>
<table id="datatable" class="table table-hover">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-SortOrder="@ViewData["NameSortparam"]">
                    @Html.DisplayNameFor(model => model.FullName)
                </a>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                <a asp-action="Index" asp-route-SortOrder="@ViewData["DateSortParm"]">
                    @Html.DisplayNameFor(model => model.Brirhday)
                </a>
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i>Employee</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brirhday)
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@item.EmpoyeeID"><i class="far fa-edit fa-lg"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.EmpoyeeID" class="text-danger ml-1" onclick="return confirm('are you sure to delete this Row?')"><i class="fas fa-user-times fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.2/sc-2.0.5/sb-1.2.1/sp-1.4.0/sl-1.3.3/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.2/sc-2.0.5/sb-1.2.1/sp-1.4.0/sl-1.3.3/datatables.min.js"></script>
   <script>

       $(document).ready(function () {
           $('#datatable').DataTable({
               "paging": true,
               "ordering": false,
               "info": false
           });
       });
   </script>
}
